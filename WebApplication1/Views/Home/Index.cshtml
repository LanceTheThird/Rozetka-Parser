@{
    ViewBag.Title = "Home Page";
}
@using WebApplication1.Models
@model List<Product>

@foreach (var p in Model)
{
<div class="row">
    <div class="col-md-4">
        <h2></h2>
        <img src="@p.Picture" width="240" height="146" />  
    </div>
    <div class="col-md-4">
        <h2></h2>
        <p>@Html.ActionLink(@p.Name, "Good", "Home", @p, null)</p>                     
    </div>
    <div class="col-md-4">
        <h2></h2>
        <p>@p.Description</p>
        
    </div>
</div>
}